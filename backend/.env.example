# Application Configuration
NODE_ENV=development
PORT=3000
API_PREFIX=api

# Database Configuration
# Option 1: PostgreSQL
DATABASE_URL="postgresql://postgres:password@localhost:5432/event_reservation"

# Option 2: MongoDB
# DATABASE_URL="mongodb://localhost:27017/event_reservation"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production-with-minimum-32-characters
JWT_EXPIRATION=7d

# CORS Configuration
CORS_ORIGIN=http://localhost:5173

# Rate Limiting
THROTTLE_TTL=60
THROTTLE_LIMIT=10

# Pagination
DEFAULT_PAGE_SIZE=10
MAX_PAGE_SIZE=100

# PDF Configuration
PDF_LOGO_PATH=./assets/logo.png

